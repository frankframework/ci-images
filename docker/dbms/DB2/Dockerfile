FROM ibmcom/db2

ENV LICENSE=accept
ENV DB2INSTANCE=db2inst1
ENV DB2INST1_PASSWORD=syspw
ENV DBNAME=testiaf
ENV BLU=false
ENV ENABLE_ORACLE_COMPATIBILITY=false
ENV UPDATEAVAIL=NO
ENV TO_CREATE_SAMPLEDB=false
ENV REPODB=false
ENV IS_OSXFS=false
ENV PERSISTENT_HOME=false
ENV HADR_ENABLED=false
ENV ETCD_ENDPOINT=
ENV ETCD_USERNAME=
ENV ETCD_PASSWORD=
ENV ARCHIVE_LOGS=false

COPY init_user.* /var/custom/

HEALTHCHECK --start-period=240s CMD /opt/ibm/db2/V11.5/bin/db2 CONNECT TO TESTIAF USER testiaf_user USING testiaf_user00